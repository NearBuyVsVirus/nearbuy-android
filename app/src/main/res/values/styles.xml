<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- <item name="windowActionBarOverlay">true</item> // if active dialogs wont move on soft input
        <item name="android:windowTranslucentStatus">true</item> -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>

        <item name="fontFamily">@font/proxima_nova_soft</item>
        <item name="android:fontFamily">@font/proxima_nova_soft</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="ListButton">
        <item name="android:background">@drawable/rounded_outer</item>
        <item name="android:drawableEnd">@drawable/ic_chevron_right_black_24dp</item>
        <item name="android:drawableTint">@android:color/white</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ListButtonLarge" parent="ListButton">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="AuthenticationEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/grey_border</item>
        <item name="android:drawableTint">@color/grey_border</item>
        <item name="fontFamily">@font/proxima_nova_soft_bold</item>
        <item name="android:fontFamily">@font/proxima_nova_soft_bold</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
</resources>
